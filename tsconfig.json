{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017.object"
    ],
    "module": "commonjs",
    "outDir": "dist/"
  },
  "include": [
    "./src/**/*.ts",
    "./bin/**/*.ts"
  ]
}
